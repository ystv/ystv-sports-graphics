{
  "private": true,
  "workspaces": [
    "./nodecg-bundle",
    "./scores"
  ],
  "version": "0.0.0",
  "scripts": {
    "nodecg": "cd ../.. && npm start",
    "postinstall": "patch-package && mkdir -p scores/addon-build/release/install-root && cp node_modules/couchbase/build/Release/couchbase_impl.node scores/addon-build/release/install-root/"
  },
  "name": "ystv-sports-graphics",
  "nodecg": {
    "compatibleRange": "^1.1.1",
    "dashboardPanels": [
      {
        "name": "sports-graphics-controller",
        "title": "SportsGraphicsController",
        "file": "dashboard.html",
        "headerColor": "#FAAF18",
        "fullbleed": true
      }
    ],
    "graphics": [
      {
        "file": "graphics.html",
        "width": 1920,
        "height": 1080
      }
    ],
    "mount": [
      {
        "directory": "graphics/public",
        "endpoint": "public"
      }
    ]
  },
  "packageManager": "yarn@3.2.0",
  "devDependencies": {
    "concurrently": "^7.0.0",
    "patch-package": "^6.4.7"
  }
}
